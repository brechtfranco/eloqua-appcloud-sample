<div class="container">
  <section>
    <div class="panel panel-default">
      <div class="panel-heading">
        <div class="row">
        <div class="col-md-12"><%= image_tag("integrate.png", class: "pull-left", width: "100px", style: "margin-right: 15px;") %>
          <h3 class="panel-title" style="margin-top: 5px;"><strong>Configure Disposition Cloud Action</strong></h3></div>
        </div>
      </div>
      <div class="panel-body">
        <form class="">
          <div class="form-group">
            <label>Lead ID Field</label>
            <select class="form-control">
              <option value="Integrate Lead ID">Integrate Lead ID</option>
            </select>
          </div>
          <div class="form-group">
            <label>Disposition</label>
            <select class="form-control">
              <option value="GL">Converted</option>
              <option value="CB">Chargeback</option>
            </select>
          </div>
          <div class="form-group">
            <label>Custom Reason</label>
            <input type="text" class="form-control" placeholder="Enter Custom Reason">
          </div>
          <button type="submit" class="btn btn-default">Save</button>
        </form>
      </div>
    </div>
  </section>
</div>